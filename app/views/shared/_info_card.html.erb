<%
  # Parameters:
  # title: The card title (e.g., "Personal Information")
  # icon: The heroicon name (e.g., "user-circle")
%>

<div class="bg-white shadow rounded-lg overflow-visible">
  <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
    <h2 class="text-lg font-semibold text-gray-900 flex items-center">
      <%= heroicon icon, variant: :outline, options: { class: "w-5 h-5 mr-2" } %>
      <%= title %>
    </h2>
  </div>
  <div class="px-6 py-4">
    <%= yield %>
  </div>
</div>

