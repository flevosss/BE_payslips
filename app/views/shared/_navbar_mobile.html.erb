<div data-navbar-target="menu" class="hidden md:hidden">
  <div class="px-2 pt-2 pb-3 space-y-1 border-t border-gray-200">
    <% if user_signed_in? %>
      <div class="px-3 py-2 text-sm text-gray-500">
        Hello, <%= current_user.employee&.first_name || current_user.email.split('@').first %>
      </div>
      
      <%= link_to "My Payslips", my_payslips_path, class: "block px-3 py-2 rounded-md text-base font-medium text-green-950 hover:text-green-900 hover:bg-gray-50" %>
      <%= link_to "Request Leave", request_path, class: "block px-3 py-2 rounded-md text-base font-medium text-green-950 hover:text-green-900 hover:bg-gray-50" %>
      <%= link_to "My Profile", my_profile_path, class: "block px-3 py-2 rounded-md text-base font-medium text-green-950 hover:text-green-900 hover:bg-gray-50" %>
      
      <% if current_user.can_view_employees? %>
        <div class="pt-2 border-t border-gray-200 mt-2">
          <div class="px-3 py-2 text-xs font-semibold text-gray-500 uppercase tracking-wider">
            <%= current_user.admin? ? "Admin" : "HR" %>
          </div>
          <%= link_to "Manage Employees", employees_path, class: "block px-3 py-2 rounded-md text-base font-medium text-green-950 hover:text-green-900 hover:bg-gray-50" %>
          <%= link_to "Manage Payslips", payslips_path, class: "block px-3 py-2 rounded-md text-base font-medium text-green-950 hover:text-green-900 hover:bg-gray-50" %>
          <% if current_user.admin? %>
            <%= link_to "Manage Leave Requests", admin_leaves_path, class: "block px-3 py-2 rounded-md text-base font-medium text-green-950 hover:text-green-900 hover:bg-gray-50" %>
          <% end %>
        </div>
      <% end %>
      
      <div class="pt-2 border-t border-gray-200 mt-2">
        <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "w-full text-left px-3 py-2 rounded-md text-base font-medium bg-green-950 text-white hover:bg-green-900" %>
      </div>
    <% else %>
      <%= link_to "Log in", new_user_session_path, class: "block px-3 py-2 rounded-md text-base font-medium text-green-950 hover:text-green-900 hover:bg-gray-50" %>
      <%= link_to "Sign up", new_user_registration_path, class: "block px-3 py-2 rounded-md text-base font-medium bg-green-950 text-white hover:bg-green-900" %>
    <% end %>
  </div>
</div>

