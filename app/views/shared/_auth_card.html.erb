<div class="max-w-4xl mx-auto bg-white p-8 rounded-2xl shadow-2xl mt-25">
  <h2 class="text-4xl font-bold text-green-900 mb-8 text-center"><%= title %></h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
    
    <div class="flex flex-col gap-4">
      <%= yield %>
    </div>

    <!-- Right side: Image is always there, and I have it hidden on mobile -->
    <div class="bg-muted relative hidden md:block">
      <%= image_tag "railslips.svg", alt: "RailSlips Logo", class: "w-full h-full object-cover" %>
    </div>
  </div>
</div>

