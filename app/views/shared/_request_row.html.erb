<% 
  # Parameters:
  # request: VacationRequest object to display
  
  request = local_assigns[:request]
%>

<div class="p-6 hover:bg-gray-50 transition-all duration-200">
  <div class="flex items-start justify-between mb-4">
    <div class="flex items-start space-x-4">
      <% if request.status == 'pending' %>
        <div class="flex-shrink-0 w-11 h-11 rounded-xl bg-yellow-50 border border-yellow-200 flex items-center justify-center">
          <%= heroicon "clock", variant: :solid, options: { class: "w-5 h-5 text-yellow-600" } %>
        </div>
      <% elsif request.status == 'approved' %>
        <div class="flex-shrink-0 w-11 h-11 rounded-xl bg-green-50 border border-green-200 flex items-center justify-center">
          <%= heroicon "check-circle", variant: :solid, options: { class: "w-5 h-5 text-green-600" } %>
        </div>
      <% else %>
        <div class="flex-shrink-0 w-11 h-11 rounded-xl bg-red-50 border border-red-200 flex items-center justify-center">
          <%= heroicon "x-circle", variant: :solid, options: { class: "w-5 h-5 text-red-600" } %>
        </div>
      <% end %>
      
      <div class="flex-1">
        <div class="flex items-center flex-wrap gap-2 mb-1">
          <span class="inline-flex items-center px-2.5 py-1 rounded-md text-xs font-semibold <%= request.status_badge_class %>">
            <%= request.status.titleize %>
          </span>
          <span class="inline-flex items-center px-2.5 py-1 rounded-md text-xs font-medium bg-blue-100 text-blue-800">
            <%= request.leave_type_display %>
          </span>
          <div class="flex items-center bg-gray-100 text-gray-700 px-2.5 py-1 rounded-md">
            <%= heroicon "calendar", variant: :mini, options: { class: "w-3.5 h-3.5 mr-1" } %>
            <span class="text-xs font-semibold"><%= request.days_count %></span>
            <span class="text-xs ml-0.5"><%= request.days_count == 1 ? 'day' : 'days' %></span>
          </div>
        </div>
        
        <p class="text-xs text-gray-500">
          Submitted on <%= request.created_at.strftime("%B %d, %Y") %>
        </p>
      </div>
    </div>
  </div>
  
  <div class="ml-15 space-y-2.5">
    <div class="flex items-center">
      <%= heroicon "calendar-days", variant: :mini, options: { class: "w-4 h-4 text-gray-400 mr-2" } %>
      <span class="text-sm text-gray-900 font-medium">
        <%= request.start_date.strftime("%b %d") %> - <%= request.end_date.strftime("%b %d, %Y") %>
      </span>
    </div>
    
    <div class="flex items-start">
      <%= heroicon "chat-bubble-left-ellipsis", variant: :mini, options: { class: "w-4 h-4 text-gray-400 mr-2 mt-0.5" } %>
      <span class="text-sm text-gray-600"><%= request.reason %></span>
    </div>
  </div>
</div>

