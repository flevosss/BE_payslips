<div class="max-w-3xl mx-auto py-12">
  <div class="bg-white rounded-2xl shadow-xl p-8">
    <h2 class="text-3xl font-bold text-green-900 mb-6 text-center">Complete Your Profile</h2>
    <p class="text-gray-600 text-center mb-8">Please provide your information to continue</p>

    <%= form_with model: @employee, url: profile_path, method: :post, class: "space-y-6" do |f| %>
      
      <% if @employee.errors.any? %>
        <% flash.now[:error] = @employee.errors.full_messages.join(', ') %>
      <% end %>

      <div class="border-green-900 border-b pb-6"> <!-- im adding a border between the sections with the border-b-->
        <h3 class="text-xl font-semibold text-gray-800 mb-4">Personal Information</h3>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= f.label :first_name, "First Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_field :first_name, class: "rounded-md border-gray-300 p-3 w-full border-2 shadow-sm focus:outline-none focus:border-green-500" %>
          </div>

          <div>
            <%= f.label :last_name, "Last Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_field :last_name, class: "rounded-md border-gray-300 p-3 w-full border-2 shadow-sm focus:outline-none focus:border-green-500" %>
          </div>
        </div>

        <div class="mt-6">
          <%= f.label :date_of_birth, "Date of Birth", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.date_field :date_of_birth, class: "rounded-md border-gray-300 p-3 w-full border-2 shadow-sm focus:outline-none focus:border-green-500" %>
        </div>

        <div class="mt-6">
          <%= f.label :address, "Address", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :address, class: "rounded-md border-gray-300 p-3 w-full border-2 shadow-sm focus:outline-none focus:border-green-500 resize-none" %>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
          <div>
            <%= f.label :postal_code, "Postal Code", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_field :postal_code, class: "rounded-md border-gray-300 p-3 w-full border-2 shadow-sm focus:outline-none focus:border-green-500" %>
          </div>

          <div>
            <%= f.label :bsn, "BSN", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_field :bsn, class: "rounded-md border-gray-300 p-3 w-full border-2 shadow-sm focus:outline-none focus:border-green-500" %>
          </div>
        </div>
      </div>

      <div>
        <h3 class="text-xl font-semibold text-gray-800 mb-4">Bank Account Information</h3>
        
        <%= f.fields_for :account_info do |account_fields| %>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <%= account_fields.label :account_number, "IBAN", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= account_fields.text_field :account_number, placeholder: "NL00 ABCD 0123 4567 89", class: "rounded-md border-gray-300 p-3 w-full border-2 shadow-sm focus:outline-none focus:border-green-500" %>
            </div>

            <div>
              <%= account_fields.label :account_name, "Account Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= account_fields.text_field :account_name, class: "rounded-md border-gray-300 p-3 w-full border-2 shadow-sm focus:outline-none focus:border-green-500" %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="pt-6">
        <%= f.submit "Complete Profile", class: "w-full bg-green-950 text-white py-3 rounded-md font-semibold hover:bg-green-900 focus:outline-none cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
