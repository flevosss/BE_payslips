<div class="bg-white rounded-2xl shadow-xl p-8">
  <h3 class="text-2xl font-bold text-green-900 mb-6">Employee Management</h3>
  
  <% if employees.present? %>
    <%= render 'employees/employee_table', employees: employees %>
  <% else %>
    <div class="text-center py-8">
      <p class="text-gray-500">No employees found.</p>
    </div>
  <% end %>
  
  <!-- Simple Pagination -->
  <% if employees.respond_to?(:current_page) && employees.total_pages > 1 %>
    <div class="flex items-center justify-center mt-6 pt-6 border-t border-gray-200">
      <div class="flex items-center space-x-2">
        <% if employees.current_page > 1 %>
          <%= link_to "← Previous", employees_path(page: employees.current_page - 1), 
              class: "px-4 py-2 text-sm bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200" %>
        <% end %>
        
        <span class="px-4 py-2 text-sm bg-green-900 text-white rounded-md">
          Page <%= employees.current_page %> of <%= employees.total_pages %>
        </span>
        
        <% if employees.current_page < employees.total_pages %>
          <%= link_to "Next →", employees_path(page: employees.current_page + 1), 
              class: "px-4 py-2 text-sm bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
