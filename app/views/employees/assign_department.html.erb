<% content_for :title, "Assign Department - RailSlips" %>

<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-6">
    <%= link_to employee_path(@user), class: "inline-flex items-center text-sm text-gray-600 hover:text-gray-900" do %>
      <%= heroicon "arrow-left", variant: :outline, options: { class: "w-4 h-4 mr-2" } %>
      Back to Profile
    <% end %>
  </div>

  <div class="bg-white shadow rounded-lg overflow-visible">
    <div class="px-6 py-4 bg-green-900 border-b border-green-800">
      <h2 class="text-lg font-semibold text-white flex items-center">
        <%= heroicon "building-office-2", variant: :outline, options: { class: "w-5 h-5 mr-2" } %>
        Assign Department
      </h2>
    </div>
    
    <div class="px-6 py-6">
      <%= form_with model: @user.employee, url: employee_path(@user), method: :patch, local: true do |f| %>
        <div class="space-y-4">
          <%= f.label :department, "Department", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= render RubyUI::Select.new do %>
            <%= render RubyUI::SelectInput.new(name: "employee[department]", value: @user.employee&.department) %>
            <%= render RubyUI::SelectTrigger.new do %>
              <%= render RubyUI::SelectValue.new(placeholder: "Select a department") do %>
                <%= @user.employee&.department.present? ? @user.employee.department : "Select a department" %>
              <% end %>
            <% end %>
            <%= render RubyUI::SelectContent.new do %>
              <% DEPARTMENTS.each do |dept| %>
                <%= render RubyUI::SelectItem.new(value: dept, **{ aria: { selected: (@user.employee&.department == dept).to_s } }) { dept } %>
              <% end %>
            <% end %>
          <% end %>

          <div class="flex gap-3 pt-4">
            <%= f.submit "Save Changes", 
                class: "bg-green-900 text-white px-6 py-2 rounded-md hover:bg-green-800 transition-colors font-medium" %>
            <%= link_to "Cancel", 
                employee_path(@user), 
                class: "bg-gray-200 text-gray-700 px-6 py-2 rounded-md hover:bg-gray-300 transition-colors font-medium" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

