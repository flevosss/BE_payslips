<% content_for :title, "Edit Employee - RailSlips" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-6">
    <%= link_to employee_path(@user), class: "inline-flex items-center text-sm text-gray-600 hover:text-gray-900" do %>
      <%= heroicon "arrow-left", variant: :outline, options: { class: "w-4 h-4 mr-2" } %>
      Back to Profile
    <% end %>
  </div>

  <%= form_with model: @user, url: employee_path(@user), method: :patch, local: true do |f| %>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <%= render 'shared/info_card', title: 'Role', icon: 'shield-check' do %>
        <%= f.label :role, "Assign Role", class: "block text-sm font-medium text-gray-500 mb-2" %>
        <%= render RubyUI::Select.new do %>
          <%= render RubyUI::SelectInput.new(name: "user[role]", value: @user.role) %>
          <%= render RubyUI::SelectTrigger.new do %>
            <%= render RubyUI::SelectValue.new(placeholder: "Select a role") do %>
              <%= @user.role.present? ? @user.role.capitalize : "Select a role" %>
            <% end %>
          <% end %>
          <%= render RubyUI::SelectContent.new do %>
            <%= render RubyUI::SelectItem.new(value: "employee", **{ aria: { selected: (@user.role == "employee").to_s } }) { "Employee" } %>
            <%= render RubyUI::SelectItem.new(value: "admin", **{ aria: { selected: (@user.role == "admin").to_s } }) { "Admin" } %>
          <% end %>
        <% end %>
      <% end %>

      <%= f.fields_for :employee do |employee_fields| %>
        <%= render 'shared/info_card', title: 'Department', icon: 'building-office-2' do %>
          <%= employee_fields.label :department, "Assign Department", class: "block text-sm font-medium text-gray-500 mb-2" %>
          <%= render RubyUI::Select.new do %>
            <%= render RubyUI::SelectInput.new(name: "user[employee_attributes][department]", value: @user.employee&.department) %>
            <%= render RubyUI::SelectTrigger.new do %>
              <%= render RubyUI::SelectValue.new(placeholder: "Select a department") do %>
                <%= @user.employee&.department.present? ? @user.employee.department : "Select a department" %>
              <% end %>
            <% end %>
            <%= render RubyUI::SelectContent.new do %>
              <% DEPARTMENTS.each do |dept| %>
                <%= render RubyUI::SelectItem.new(value: dept, **{ aria: { selected: (@user.employee&.department == dept).to_s } }) { dept } %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    </div>

    <div class="flex gap-3 mt-6">
      <%= f.submit "Save Changes", 
          class: "bg-green-900 text-white px-6 py-2 rounded-md hover:bg-green-800 transition-colors font-medium" %>
      <%= link_to "Cancel", 
          employee_path(@user), 
          class: "bg-gray-200 text-gray-700 px-6 py-2 rounded-md hover:bg-gray-300 transition-colors font-medium" %>
    </div>
  <% end %>
</div>

