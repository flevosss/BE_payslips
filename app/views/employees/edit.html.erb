<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Back Button -->
  <div class="mb-6">
    <%= link_to employee_path(@user), class: "inline-flex items-center text-sm text-gray-600 hover:text-gray-900" do %>
      <%= heroicon "arrow-left", variant: :outline, options: { class: "w-4 h-4 mr-2" } %>
      Back to Profile
    <% end %>
  </div>

  <%= form_with model: @user, url: employee_path(@user), method: :patch, local: true do |f| %>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Role Card -->
      <%= render 'shared/info_card', title: 'Role', icon: 'shield-check' do %>
        <div>
          <label for="user_role" class="block text-sm font-medium text-gray-500 mb-2">
            Assign Role
          </label>
          <%= f.select :role, 
              options_for_select([['Employee', 'employee'], ['Admin', 'admin']], @user.role),
              { include_blank: "Select a role" },
              class: "w-full rounded-md border-gray-300 bg-gray-50 shadow-sm focus:border-green-500 focus:ring-green-500 focus:bg-white px-3 py-2.5" %>
        </div>
      <% end %>

      <!-- Department Card -->
      <%= f.fields_for :employee do |employee_fields| %>
        <%= render 'shared/info_card', title: 'Department', icon: 'building-office-2' do %>
          <div>
            <label for="employee_department" class="block text-sm font-medium text-gray-500 mb-2">
              Assign Department
            </label>
            <%= employee_fields.select :department, 
                options_for_select(DEPARTMENTS, @user.employee&.department),
                { include_blank: "Select a department" },
                class: "w-full rounded-md border-gray-300 bg-gray-50 shadow-sm focus:border-green-500 focus:ring-green-500 focus:bg-white px-3 py-2.5" %>
          </div>
        <% end %>
      <% end %>
    </div>

    <!-- Action Buttons -->
    <div class="flex gap-3 mt-6">
      <%= f.submit "Save Changes", 
          class: "bg-green-900 text-white px-6 py-2 rounded-md hover:bg-green-800 transition-colors font-medium" %>
      <%= link_to "Cancel", 
          employee_path(@user), 
          class: "bg-gray-200 text-gray-700 px-6 py-2 rounded-md hover:bg-gray-300 transition-colors font-medium" %>
    </div>
  <% end %>
</div>

