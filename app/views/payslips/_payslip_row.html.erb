<!-- Payslip Row Content -->
  
  <!-- Payslip Number Column -->
  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
    <%= payslip.unique_number %>
  </td>
  
  <!-- Employee Column -->
  <td class="px-6 py-4 whitespace-nowrap">
    <div class="text-sm font-medium text-gray-900">
      <%= payslip.employee.full_name_with_email %>
    </div>
    <div class="text-sm text-gray-500">
      <%= payslip.employee.department || 'No department' %>
    </div>
  </td>
  
  <!-- Pay Period Column -->
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
    <%= payslip.start_period.strftime("%b %d") %> - <%= payslip.end_period.strftime("%b %d, %Y") %>
  </td>
  
  <!-- Salary Column -->
  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-green-900">
    â‚¬<%= number_with_precision(payslip.salary, precision: 2) %>
  </td>
  
  <!-- Date Column -->
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
    <%= payslip.date.strftime("%b %d, %Y") %>
  </td>
