<div class="max-w-7xl mx-auto py-12">
  <div class="bg-white rounded-2xl shadow-xl p-8">
    <h2 class="text-3xl font-bold text-green-900 mb-4">View your payslips</h2>
    
    <% if current_user.employee&.department.blank? %>
      <div class="text-center py-5">
        <div class="bg-gray-50 border border-gray-200 rounded-lg p-6">
          <p class="text-black-800 text-lg font-medium">You are not assigned a department yet.</p>
          <p class="text-black-700 mt-2">Please contact your employer.</p>
        </div>
      </div>
    <% else %>
      <div class="text-center py-12">
        <p class="text-gray-500">No payslips available yet.</p>
      </div>
    <% end %>
  </div>
</div>