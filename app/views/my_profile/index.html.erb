<div class="max-w-7xl mx-auto py-12">
  <div class="bg-white rounded-2xl shadow-xl p-8">
    <h2 class="text-3xl font-bold text-green-900 mb-4">My Profile</h2>
    <p class="text-gray-600 text-lg mb-6">Manage your personal information</p>
    
    <% if current_user.employee %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700">First Name</label>
            <p class="mt-1 text-gray-900"><%= current_user.employee.first_name %></p>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700">Last Name</label>
            <p class="mt-1 text-gray-900"><%= current_user.employee.last_name %></p>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700">Date of Birth</label>
            <p class="mt-1 text-gray-900"><%= current_user.employee.date_of_birth %></p>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700">Address</label>
            <p class="mt-1 text-gray-900"><%= current_user.employee.address %></p>
          </div>
        </div>
        
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700">Postal Code</label>
            <p class="mt-1 text-gray-900"><%= current_user.employee.postal_code %></p>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700">BSN</label>
            <p class="mt-1 text-gray-900"><%= current_user.employee.bsn %></p>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700">Email</label>
            <p class="mt-1 text-gray-900"><%= current_user.email %></p>
          </div>
          <% if current_user.employee.account_info %>
            <div>
              <label class="block text-sm font-medium text-gray-700">Account Name</label>
              <p class="mt-1 text-gray-900"><%= current_user.employee.account_info.account_name %></p>
            </div>
          <% end %>
        </div>
      </div>
      
      <div class="mt-8">
        <%= link_to "Edit Profile", edit_user_registration_path, class: "bg-green-950 text-white px-6 py-2 rounded-md font-semibold hover:bg-green-900" %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <p class="text-gray-500">No profile information available.</p>
        <p class="text-sm text-gray-400 mt-2">Complete your profile to see your information here.</p>
      </div>
    <% end %>
  </div>
</div>