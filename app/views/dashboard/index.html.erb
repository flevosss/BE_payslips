<div class="min-h-screen bg-gray-50">
  <!-- Header with Logout -->
  <nav class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <%= image_tag "payslips_logo_nobg.png", alt: "Logo", class: "h-10 w-auto" %>
          <h1 class="ml-4 text-2xl font-bold text-green-900">Bookingexperts</h1>
        </div>
        <div class="flex items-center gap-4">
          <span class="text-gray-700">Hello, <%= current_user.email %></span>
          <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "bg-green-950 text-white px-4 py-2 rounded-md font-semibold hover:bg-green-900" %>
        </div>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="bg-white rounded-2xl shadow-xl p-8">
      <h2 class="text-3xl font-bold text-green-900 mb-4">Welcome to Your Dashboard!</h2>
      <p class="text-gray-600 text-lg mb-6">You're successfully logged in as <strong><%= current_user.email %></strong></p>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-8">
        <div class="border-2 border-gray-200 rounded-lg p-6 hover:border-green-500 transition">
          <h3 class="text-xl font-semibold text-gray-800 mb-2">Upload Payslips</h3>
          <p class="text-gray-600">Upload and manage your payslip documents</p>
          <button class="mt-4 text-green-900 font-medium">Coming soon →</button>
        </div>
        
        <div class="border-2 border-gray-200 rounded-lg p-6 hover:border-green-500 transition">
          <h3 class="text-xl font-semibold text-gray-800 mb-2">View Payslips</h3>
          <p class="text-gray-600">Access all your uploaded payslips</p>
          <button class="mt-4 text-green-900 font-medium">Coming soon →</button>
        </div>
      </div>
    </div>
  </main>
</div>