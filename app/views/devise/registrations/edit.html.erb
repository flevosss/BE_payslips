<div class="min-h-screen bg-gray-50 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl w-full">
    <div class="gap-12 items-center">

      <!-- Form Section -->
      <div class="bg-white rounded-2xl shadow-xl p-8">
        <h2 class="text-3xl font-bold text-green-900 mb-6 text-center">Edit Profile</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          
          <div class="mb-4">
            <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-gray-300" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="mb-4 p-3 bg-yellow-50 border border-yellow-200 rounded-md">
              <p class="text-sm text-yellow-800">Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            </div>
          <% end %>

          <div class="mb-4">
            <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <p class="text-sm text-gray-500 mb-2">(leave blank if you don't want to change it)</p>
            <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-gray-300" %>
            <% if @minimum_password_length %>
              <p class="text-sm text-gray-500 mt-1"><%= @minimum_password_length %> characters minimum</p>
            <% end %>
          </div>

          <div class="mb-4">
            <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-gray-300" %>
          </div>

          <div class="mb-6">
            <%= f.label :current_password, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <p class="text-sm text-gray-500 mb-2">(we need your current password to confirm your changes)</p>
            <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-gray-300" %>
          </div>

          <div class="mb-6">
            <%= f.submit "Update", class: "w-full bg-green-950 text-white py-2 px-4 rounded-md font-semibold hover:bg-green-900 focus:outline-none" %>
          </div>
        <% end %>

        <!-- Cancel Account Section -->
        <div class="border-t border-gray-200 pt-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Cancel my account</h3>
          <p class="text-sm text-gray-600 mb-4">Unhappy with our service?</p>
          <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "bg-red-600 text-white py-2 px-4 rounded-md font-semibold hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500" %>
        </div>

        <!-- Back Link -->
        <div class="mt-6 text-center">
          <%= link_to "Back", :back, class: "text-green-950 hover:text-green-900 font-medium" %>
        </div>
      </div>
    </div>
  </div>
</div>
