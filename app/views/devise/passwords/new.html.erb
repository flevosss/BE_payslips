<%= render layout: "shared/auth_card", locals: { title: "Forgot your password?" } do %>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mb-6 mt-5">
      <%= f.label :email, class: "block text-lg font-medium text-gray-700 mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded-md border-gray-300 p-3 w-full border-2 shadow-sm focus:outline-none focus:border-gray-300" %>
    </div>

    <div class="actions mt-6">
      <%= f.submit "Send reset instructions", class: "w-full bg-green-950 text-white py-3 rounded-md font-semibold hover:bg-green-900 focus:outline-none" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
<% end %>
